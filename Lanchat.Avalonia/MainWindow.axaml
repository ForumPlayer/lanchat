<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="350"
        x:Class="Lanchat.Avalonia.MainWindow"
        Title="Lanchat">
    <TabControl>
        <TabItem Header="Lanchat">
            <Grid ColumnDefinitions="*" RowDefinitions="*,50">
                <ScrollViewer Name="ChatScroll" Grid.Row="0">
                    <StackPanel Name="Chat" />
                </ScrollViewer>
                <TextBox
                    Name="Input"
                    Grid.Row="1"
                    DockPanel.Dock="Bottom"
                    Margin="0 10 0 10" />
            </Grid>
        </TabItem>
        <TabItem Header="Settings">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Settings" />
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>